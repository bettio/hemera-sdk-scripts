#!/bin/bash

# External variables
PROJECT_PATH="${1}"
ARCH="${2}"

if [ "${ARCH}" == "" ]; then
  ARCH="${HEMERA_BUILD_ARCH}"
fi
if [ "${ARCH}" == "" ]; then
  ARCH="i586"
fi

# Common variables
SHARED_SOURCE_BASE="/usr/share/hemera-devel-tools"
SHARED_SOURCE_PATHS="${SHARED_SOURCE_BASE}/hemera-vars-paths"
SHARED_SOURCE_SB2="${SHARED_SOURCE_BASE}/hemera-vars-sb2"

if ! [ -f "${SHARED_SOURCE_PATHS}" ]; then
  echo "Missing \"${SHARED_SOURCE_PATHS}\" source file. Cannot continue."
  exit 1
fi
source "${SHARED_SOURCE_PATHS}"

if [ "${ARCH}" != "i586" ]; then
  if ! [ -f "${SHARED_SOURCE_SB2}" ]; then
    echo "Missing \"${SHARED_SOURCE_SB2}\" source file. Cannot continue."
    exit 1
  fi
  source "${SHARED_SOURCE_SB2}"
fi

# Other variables
if [ "${ARCH}" == "i586" ]; then
  FULL_BUILD_PATH="${BUILD_PATH}"
  FULL_RPMB_PATH="${RPMB_PATH}"
  FULL_RPMB_SOURCES_PATH="${RPMB_SOURCES_PATH}"
  FULL_RPMB_RPMS_PATH="${RPMB_RPMS_PATH}"
  EXECUTOR=""
  RPMB_EXECUTOR=""
  RPMB_TARGET=""
else
  FULL_BUILD_PATH="${TARGET_PATH}${BUILD_PATH}"
  FULL_RPMB_PATH="${TARGET_PATH}${RPMB_PATH}"
  FULL_RPMB_SOURCES_PATH="${TARGET_PATH}${RPMB_SOURCES_PATH}"
  FULL_RPMB_RPMS_PATH="${TARGET_PATH}${RPMB_RPMS_PATH}"
  EXECUTOR="${SB2TMR}"
  RPMB_EXECUTOR="${SB2T}"
  RPMB_TARGET="--target ${ARCH}-meego-linux"
fi

# Let's do the work
cd ${FULL_BUILD_PATH} &&
${EXECUTOR} make generate-spec-file-local &&
mkdir -p "${FULL_RPMB_SOURCES_PATH}" &&
find "${FULL_RPMB_PATH}" -mindepth 2 -maxdepth 2 -exec rm -fr {} \; &&
cat *-local.spec | grep -v "^BuildRequires: " > "${FULL_RPMB_SOURCES_PATH}/__autogenerated__.spec" &&
cd "${FULL_RPMB_SOURCES_PATH}" &&
${RPMB_EXECUTOR} rpmbuild ${RPMB_TARGET} -bb __autogenerated__.spec &&
cd "${FULL_RPMB_RPMS_PATH}" &&
find -iname "*.rpm" -exec cp {} ${SRC_PATH} \;
exit $?
